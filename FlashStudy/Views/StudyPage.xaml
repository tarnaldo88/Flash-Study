<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlashStudy.Views.StudyPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FlashStudy.ViewModels"
    x:DataType="viewmodels:StudyViewModel"
    Title="Study">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Grid ColumnDefinitions="*,Auto,*">
            <Label Grid.Column="1"
                   Text="{Binding DeckName}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
            <HorizontalStackLayout Grid.Column="2" Spacing="6" HorizontalOptions="End">
                <Label Text="Flash Study" VerticalOptions="Center" />
                <Image Source="flashstudylogo.png"
                       HeightRequest="28"
                       WidthRequest="28"
                       Aspect="AspectFit"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>

        <Frame Padding="32"
               HeightRequest="260"
               HorizontalOptions="Fill"
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
               BorderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
            <Label Text="{Binding DisplayText}"
                   FontSize="20"
                   TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource White}}"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill" />
        </Frame>

        <Button Text="Tap to Flip" Command="{Binding FlipCommand}" />

        <HorizontalStackLayout Spacing="8">
            <Button Text="Prev" Command="{Binding PrevCommand}" />
            <Button Text="Next" Command="{Binding NextCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
