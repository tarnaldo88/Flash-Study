<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlashStudy.Views.EditCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FlashStudy.ViewModels"
    x:DataType="viewmodels:EditCardViewModel"
    Title="Edit Card">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Grid ColumnDefinitions="*,Auto,*">
            <Label Grid.Column="1"
                   Text="{Binding DeckName}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
            <HorizontalStackLayout Grid.Column="2" Spacing="6" HorizontalOptions="End">
                <Label Text="Flash Study" VerticalOptions="Center" />
                <Image Source="flashstudylogo.png"
                       HeightRequest="28"
                       WidthRequest="28"
                       Aspect="AspectFit"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>

        <Label Text="Front" />
        <Editor AutoSize="TextChanges" HeightRequest="120" Text="{Binding Front}" />

        <Label Text="Back" />
        <Editor AutoSize="TextChanges" HeightRequest="120" Text="{Binding Back}" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>
