<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlashStudy.Views.DeckListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Decks">

    <VerticalStackLayout Padding="16" Spacing="12">

        <HorizontalStackLayout Spacing="8">
            <Entry Placeholder="New deck name" Text="{Binding NewDeckName}" HorizontalOptions="FillAndExpand" />
            <Button Text="Add" Command="{Binding AddDeckCommand}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplace>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto" Padding="8">
                        <Label Text="{Binding Name}" VerticalOptions="Center" />

                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="Open"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenDeckCommand}"
                                    CommandParameter="{Binding .}" />
                            <Button Text="Delete"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteDeckCommand}"
                                    CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplace>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>