<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlashStudy.Views.DeckListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Decks">

    <VerticalStackLayout Padding="24" Spacing="12">
        <VerticalStackLayout HorizontalOptions="Center" Spacing="6">
            <Image Source="flashstudylogo.png"
                   HeightRequest="120"
                   WidthRequest="120"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" />            
        </VerticalStackLayout>

        <HorizontalStackLayout Spacing="8">
            <Entry Placeholder="New deck name"
                   Text="{Binding NewDeckName}"
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Center" />            
            <Button Text="Add" Command="{Binding AddDeckCommand}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto,Auto" Padding="8">
                        <Label Text="{Binding Name}" VerticalOptions="Center" />

                        <Label Grid.Column="1"
                               Text="{Binding Count, StringFormat='Questions: {0}'}"
                               VerticalOptions="Center"
                               HorizontalOptions="End" />

                        <HorizontalStackLayout Grid.Column="2" Spacing="8">
                            <Button Text="Open"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenDeckCommand}"
                                    CommandParameter="{Binding .}" />
                            <Button Text="Delete"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteDeckCommand}"
                                    CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
