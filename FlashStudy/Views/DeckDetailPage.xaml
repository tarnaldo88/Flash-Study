<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlashStudy.Views.DeckDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:FlashStudy.Models"
    xmlns:viewmodels="clr-namespace:FlashStudy.ViewModels"
    x:DataType="viewmodels:DeckDetailViewModel"
    Title="{Binding Deck.Name}">

    <Grid Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="12">
        <Grid ColumnDefinitions="*,Auto,*">
            <Label Grid.Column="1"
                   Text="{Binding Deck.Name}"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
            <Label Text="{Binding DeckCount, StringFormat='Questions: {0}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <HorizontalStackLayout Grid.Column="2" Spacing="6" HorizontalOptions="End">
                <Label Text="Flash Study" VerticalOptions="Center" />
                <Image Source="flashstudylogo.png"
                       HeightRequest="28"
                       WidthRequest="28"
                       Aspect="AspectFit"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>

        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Button Text="Add Card" Command="{Binding AddCardCommand}" />
            <Button Text="Study" Command="{Binding StudyCommand}" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Cards}"
                        SelectionMode="None">
            <CollectionView.Header>
                <Entry Placeholder="Search questions"
                       Text="{Binding SearchText}"
                       ClearButtonVisibility="WhileEditing" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Card">
                    <Grid ColumnDefinitions="*,Auto" Padding="8">
                        <Label Text="{Binding Front}" LineBreakMode="TailTruncation" />
                        <HorizontalStackLayout Grid.Column="1" Spacing="8">
                            <Button Text="Edit"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCardCommand}"
                                    CommandParameter="{Binding .}" />
                            <Button Text="Delete"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCardCommand}"
                                    CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
